# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Backend API
API_URL=http://localhost:3001
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (Supabase provides this)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Contact Emails (for legal pages terms/privacy)
NEXT_PUBLIC_PRIVACY_EMAIL=privacy@example.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@example.com

# Google Analytics
# Get your GA4 Measurement ID from https://analytics.google.com/
NEXT_PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Email Configuration (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx
# Email address to send notifications to when users request beta access
ADMIN_EMAIL=admin@example.com
# Verified sender email (must be verified in Resend)
EMAIL_FROM=noreply@raceplanner.com
# Or use Resend's test domain for development: onboarding@resend.dev

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://raceplanner.com

# Cloudflare Turnstile (Bot Protection)
# Get keys from https://dash.cloudflare.com/?to=/:account/turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=0x4AAAAAAA... # Public site key
TURNSTILE_SECRET_KEY=0x4AAAAAAA... # Secret key (keep private)

# App Branding (Optional)
# NEXT_PUBLIC_APP_NAME=Race Planner
# NEXT_PUBLIC_APP_DESCRIPTION=Calculate your race times and required speeds for optimal performance
